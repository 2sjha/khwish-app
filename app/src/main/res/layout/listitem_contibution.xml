<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_small"
    android:paddingStart="@dimen/padding_extra_small"
    android:paddingTop="@dimen/padding_extra_extra_small"
    android:paddingEnd="@dimen/padding_extra_small">

    <TextView
        android:id="@+id/contributor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_h5" />

    <TextView
        android:id="@+id/contribution_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_toEndOf="@+id/contributor_name"
        android:text="@string/sample_amount"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="@dimen/text_h5" />

    <TextView
        android:id="@+id/goal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contributor_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:textAlignment="textEnd"
        android:textSize="@dimen/text_h6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/goal_name"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:background="@color/grey_light" />
</RelativeLayout>